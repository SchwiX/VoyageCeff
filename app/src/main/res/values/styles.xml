<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="scroll_view_day">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/back_darkened</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/ic_remove</item>
        <item name="android:drawableEnd">@drawable/ic_remove</item>
    </style>

    <style name="scroll_view_inside">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/back_smooth</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="scroll_view_inside_add" parent="scroll_view_inside">
        <item name="android:drawableRight">@drawable/ic_add</item>
        <item name="android:drawableEnd">@drawable/ic_add</item>
    </style>
</resources>
